<Page x:Class="EWI.Data"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EWI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Data" Loaded="Window_Loaded_1">
    <Page.Resources>
        <local:EWIDataSet x:Key="eWIDataSet"/>
        <CollectionViewSource x:Key="sprzetViewSource" Source="{Binding Sprzet, Source={StaticResource eWIDataSet}}"/>
    </Page.Resources>


    <Grid Margin="-1,0,0.6,0" DataContext="{StaticResource sprzetViewSource}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="FrameData1" Content="FrameData1" HorizontalAlignment="Left" Height="956" Margin="10,10,0,0" VerticalAlignment="Top" Width="774" NavigationUIVisibility="Hidden" Source="{Binding}"/>
        <Button Content="Dodaj" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top" Width="127" Height="30" Click="Button_Click"/>
        <Button Content="Usun" HorizontalAlignment="Left" Margin="145,62,0,0" VerticalAlignment="Top" Width="127" Height="30"/>
        <Button Content="Modyfikacja" HorizontalAlignment="Left" Margin="277,62,0,0" VerticalAlignment="Top" Width="127" Height="30" Click="Button_Click_1"/>
        <Button Content="Podgląd" HorizontalAlignment="Left" Margin="409,62,0,0" VerticalAlignment="Top" Width="127" Height="30"/>
        <Button Content="Odśwież" HorizontalAlignment="Left" Margin="541,62,0,0" VerticalAlignment="Top" Width="127" Height="30" Click="Button_Click_2"/>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="153" Margin="10,116,0,0" VerticalAlignment="Top" Width="365">
            <DataGrid x:Name="sprzetDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="9.2,9.2,9.4,9" RowDetailsVisibilityMode="VisibleWhenSelected" >
                <DataGrid.ItemContainerStyle>
                    <Style TargetType="DataGridRow">
                        <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
                    </Style>
                </DataGrid.ItemContainerStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="iDColumn" Binding="{Binding ID}" Header="ID" IsReadOnly="True" Width="SizeToHeader" Visibility="Hidden"/>
                    <DataGridTextColumn x:Name="nazwa_ewidencyjnaColumn" Binding="{Binding Nazwa_ewidencyjna}" Header="Nazwa ewidencyjna" IsReadOnly="True" Width="SizeToHeader"/>
                    <DataGridTextColumn x:Name="producentColumn" Binding="{Binding Producent}" Header="Producent" IsReadOnly="True" Width="SizeToHeader"/>
                    <DataGridTextColumn x:Name="modelColumn" Binding="{Binding Model}" Header="Model" IsReadOnly="True" Width="SizeToHeader"/>
                    <DataGridTextColumn x:Name="data_zakupuColumn" Binding="{Binding Data_zakupu}" Header="Data zakupu" IsReadOnly="True" Width="SizeToHeader"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>






    </Grid>
</Page>
