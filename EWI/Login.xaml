<Window x:Class="EWI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EWI"
        mc:Ignorable="d"
                Title="Login" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="GhostWhite">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="Nazwa użytkownika" HorizontalAlignment="Left" Margin="126,45,0,0" VerticalAlignment="Top"/>
        <Label Content="Hasło" HorizontalAlignment="Left" Margin="166,129,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="126,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtPassword"  HorizontalAlignment="Left" Height="23" Margin="126,160,0,0"  VerticalAlignment="Top" Width="120"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="126,210,0,0" VerticalAlignment="Top" Width="120" Height="26" Click="Button_Click"/>
        <TextBlock x:Name="login_user" HorizontalAlignment="Left" Margin="302,129,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Visibility="Visible" Width="62"/>



    </Grid>
</Window>
